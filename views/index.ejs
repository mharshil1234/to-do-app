<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To Do App</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1 id="todo-header">To-Do</h1>
        <form action="/todo/add" method="POST">
            <input type="text" placeholder="New Task" name="todo" required id="newtodo"/>
            <button type="submit" id="add-btn">Add</button>
        </form>
        <div class="todos">
                <% todos.forEach(todo => { %>
                    <div class="todo <%= todo.completed %>" id="<%= todo._id %>">
                        <form action="/todo/toggle-checkbox/<%= todo._id %>" method="POST">
                            <button type="submit" class="cb"></button>
                        </form>
                        <span class="todo-title"><%= todo.title %></span>
                        <form action="/todo/delete/<%= todo._id %>" method="POST">
                            <button type="submit" class="dlt-btn">ðŸ—‘</button>
                        </form>
                    </div>
                <% }) %>
        </div>
        <script src="/home.js"></script>
</body>
</html>