<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do</title>
    <link rel="icon" href="app-icon.png">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="container">
        <h1 id="todo-header">To-Do List</h1>
        <form action="/todo/add" method="POST">
            <input type="text" placeholder="New Task" name="todo" required id="newtodo"/>
            <button type="submit" id="add-btn">Add</button>
        </form>
        <div class="todos">
                <% todos.forEach(todo => { %>
                    <div class="todo <%= todo.completed %>" id="<%= todo._id %>">

                        <form method="POST" class="todo-form">
                            <button type="submit" class="cb" formaction="/todo/toggle-checkbox/<%= todo._id %>"></button>

                            <input class="todo-title" value="<%= todo.title %>" disabled name="todoTitle">

                            <div class="right-actions">
                        
                                <button type="submit" class="tick-btn" formaction="/todo/editTask/<%= todo._id %>">‚úì</button>

                                <button type="button" class="edit-btn" id="<%= todo._id %>">‚úèÔ∏è</button>

                                <button type="submit" class="dlt-btn" formaction="/todo/delete/<%= todo._id %>">üóë</button>

                            </div>

                        </form>
                    </div>
                <% }) %>
        </div>
        <script src="/home.js"></script>
</body>
</html>